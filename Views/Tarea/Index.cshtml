@{
    ViewData["Title"] = "Home Page";
}

@model tl2_tp10_2023_ezemrtz.ViewModels.ListarTareasViewModel

<h2> Lista de Tareas </h2>
<table class="table table-striped">
    <thead>
        <th>Tablero</th>
        <th>Nombre</th>
        <th>Descripcion</th>
        <th>Color</th>
        <th>Estado</th>
        <th>Usuario Asignado</th>
        <th>Modificar</th>
        <th>Eliminar</th>
    </thead>
    <tbody>
        @foreach(var tarea in Model.Tareas){
            <tr>
                <td>@tarea.NombreTablero</td>
                <td>@tarea.NombreTarea</td>
                <td>@tarea.Descripcion</td>
                <td>@tarea.Color</td>
                <td>@tarea.Estado</td>
                <td>@tarea.NombreUsuarioAsignado</td>
                @if(@tarea.IdUsuarioAsignado == Context.Session.GetInt32("id")){
                    <td><a asp-controller="Tarea" asp-action="UpdateTarea" asp-route-id="@tarea.IdTarea" class="btn btn-outline-primary">Modificar</a></td>
                }
                @if(@tarea.IdUsuarioPropietario == Context.Session.GetInt32("id")){
                    <td><a asp-controller="Tarea" asp-action="DeleteTarea" asp-route-id="@tarea.IdTarea" class="btn btn-outline-danger" onclick="return confirm('Â¿Estas seguro que quieres eliminar la tarea?')">Eliminar</a></td>
                }
            </tr>
        }
    </tbody>
</table>