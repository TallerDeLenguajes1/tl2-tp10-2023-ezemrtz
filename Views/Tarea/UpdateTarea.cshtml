@model tl2_tp10_2023_ezemrtz.ViewModels.ModificarTareaViewModel

<section class="section_forms">
    <form asp-controller="Tarea" asp-action="UpdateTarea" class="formsMVC">

        <div class="form-group mb-3">
            <input asp-for="@Model.Id" hidden/>
            <input asp-for="@Model.IdTablero" class="form-control" hidden/>
            <input asp-for="@Model.Usuarios" class="form-control" hidden/>
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.IdUsuarioAsignado"></label>
            <select asp-for="@Model.IdUsuarioAsignado" class="form-select">
                <option value="" selected> - - - </option>
                @foreach(var u in @Model.Usuarios){
                    <option value="@u.Id">@u.NombreDeUsuario</option>
                }
            </select>
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Nombre"></label>
            <input asp-for="@Model.Nombre" class="form-control" />
            <span asp-validation-for="@Model.Nombre" class="text-danger"></span>    
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Descripcion"></label>
            <input asp-for="@Model.Descripcion" class="form-control" />
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Color"></label>
            <input asp-for="@Model.Color" class="form-control" />
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Estado"></label>
            <select asp-for="@Model.Estado" asp-items="@Html.GetEnumSelectList<EstadoTarea>()" class="form-select"></select>
            <span asp-validation-for="@Model.Estado" class="text-danger"></span>    
        </div>
        <div class="form-group mb-3">
            <button type="submit" class="btn btn-primary">Enviar</button>
        </div>
    </form>
</section>

@section Scripts{<partial name="_ValidationScriptsPartial"/>}