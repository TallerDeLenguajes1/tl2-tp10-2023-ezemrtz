@model tl2_tp10_2023_ezemrtz.ViewModels.CrearTareaViewModel

<section class="section_forms">
    <form asp-controller="Tarea" asp-action="CreateTarea" class="formsMVC">
        <div class="form-group mb-3">
            <input asp-for="@Model.IdTablero" class="form-control" hidden/>
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.IdUsuarioAsignado">ID usuario asignado</label>
            <select asp-for="@Model.IdUsuarioAsignado" class="form-select">
                <option value="" selected> - - - </option>
                @foreach(var u in @Model.Usuarios){
                    <option value="@u.Id">@u.Id</option>
                }
            </select>
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Nombre">Nombre Tarea</label>
            <input asp-for="@Model.Nombre" class="form-control" />
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Descripcion">Descripcion</label>
            <input asp-for="@Model.Descripcion" class="form-control" />
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Color">Color</label>
            <input asp-for="@Model.Color" class="form-control" />
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Estado">Estado</label>
            <select asp-for="@Model.Estado" asp-items="@Html.GetEnumSelectList<EstadoTarea>()" class="form-select"></select>
            <input asp-for="@Model.IdUsuarioAsignado" hidden value=0 class="form-control" />
        </div>
        <div class="form-group mb-3">
            <button type="submit" class="btn btn-primary">Enviar</button>
        </div>
    </form>
</section>