@{
    ViewData["Title"] = "Home Page";
}

@model tl2_tp10_2023_ezemrtz.ViewModels.ListarTablerosViewModel

<section class="tabIndexSection">
    <h2> Lista de Tableros </h2>
    <a asp-controller="Tablero" asp-action="CreateTablero" class="btn btn-outline-success">Crear Tablero</a>
</section>
<table class="table table-striped">
    <thead>
        <th>Id</th>
        <th>Id Usuario Propietario</th>
        <th>Nombre</th>
        <th>Descripcion</th>
        <th>Modificar</th>
        <th>Eliminar</th>
        <th></th>
        <th></th>
    </thead>
    <tbody>
        @foreach(var tablero in Model.Tableros){
            <tr>
                <td>@tablero.Id</td>
                <td>@tablero.IdUsuarioPropietario</td>
                <td>@tablero.Nombre</td>
                <td>@tablero.Descripcion</td>
                <td><a asp-controller="Tablero" asp-action="UpdateTablero" asp-route-id="@tablero.Id" class="btn btn-outline-primary">Modificar</a></td>
                <td><a asp-controller="Tablero" asp-action="DeleteTablero" asp-route-id="@tablero.Id" class="btn btn-outline-danger" onclick="return confirm('Â¿Estas seguro que quieres eliminar el tablero?')">Eliminar</a></td>
                <td><a asp-controller="Tarea" asp-action="Index" asp-route-id="@tablero.Id" class="btn btn-outline-info">Ver</a></td>
                <td><a asp-controller="Tarea" asp-action="CreateTarea" asp-route-id="@tablero.Id" class="btn btn-outline-success">Agregar Tarea</a></td>
            </tr>
        }
    </tbody>
</table>