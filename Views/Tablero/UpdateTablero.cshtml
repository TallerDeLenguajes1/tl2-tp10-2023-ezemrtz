@model Tablero


<form asp-controller="Tablero" asp-action="UpdateTablero">
    <div class="form-group">
        <input asp-for="@Model.Id" hidden/>
        <label asp-for="@Model.Nombre">Nuevo nombre:</label>
        <input asp-for="@Model.Nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Descripcion">Nueva descripcion:</label>
        <input asp-for="@Model.Descripcion" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.IdUsuarioPropietario">Nuevo ID propietario:</label>
        <input asp-for="@Model.IdUsuarioPropietario" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
</form>