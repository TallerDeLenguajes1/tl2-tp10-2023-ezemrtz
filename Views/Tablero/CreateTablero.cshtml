@model tl2_tp10_2023_ezemrtz.ViewModels.CrearTableroViewModel

<section class="section_forms">
    <form asp-controller="Tablero" asp-action="CreateTablero" class="formsMVC">
        <div class="form-group mb-3">
            <label asp-for="@Model.Nombre">Nombre tablero</label>
            <input asp-for="@Model.Nombre" class="form-control" />
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Descripcion">Descripcion</label>
            <input asp-for="@Model.Descripcion" class="form-control" />
        </div>
        <div class="form-group mb-3">
            <input asp-for="@Model.IdUsuarioPropietario" class="form-control" hidden />
        </div>
        <div class="form-group mb-3">
            <button type="submit" class="btn btn-primary">Enviar</button>
        </div>
    </form>
</section>